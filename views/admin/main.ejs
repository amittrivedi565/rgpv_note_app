<!DOCTYPE html>
<html lang="en">
    <div class="main-right-bread">
       <b><a href="#">Page</a></b>
        <div class="addModal">

            <button type="button" class="btn btn-primary btn-sm " data-bs-toggle="modal" data-bs-target="#exampleModal">+</button>

            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Create Title</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <form method="post">
                                <% branchArray.forEach(element => { %>
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">
                                        Name:</label>
                                        <input name="<%= branchArray.name %>" type="text" class="form-control" id="recipient-name">
                                    </div>
                                    
                                <% }) %>
                            
                        </div>

                        <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>

                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="main-right-bottom">
        <% if (branchData.length>0) { %>
        <% var index=0; %>
        <% for( let branchArray of branchData ) { %>
        <% index++ %>
        <div class="accordion mb-5 " id="accordionFlushExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#flush-<%=index%>" aria-expanded="false"
                    aria-controls="flush-collapseOne">
                # <%= branchArray.branch_name %>
                </button>
                <div id="flush-<%=index%>" class="accordion-collapse collapse"
                    aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body">
                        <table class="table table-sm-5 table-hover">
                            <thead >
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Tags</th>
                                    <th scope="col">*Courses</th>
                                    <th scope="col">*Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <%= branchArray.branch_name %>
                                    </td>
                                    <td><a href="/close/branch/desc/<%= branchArray.branch_id %>"><button type="button" class="btn btn-link">View</button></a></td>
                                    <td><a href="/close/branch/tags/<%= branchArray.branch_id %>"><button type="button" class="btn btn-link">View</button></a></td>
                                    <td><a href="/close/course/<%= branchArray.branch_id %>"><button
                                        type="button" class="btn btn-outline-primary btn-sm">Next</button></a></td>
                                    <td>
                                        <form
                                            action="/close/branch/<%= branchArray.branch_id %>?_method=DELETE"
                                            method="post">
                                             
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        
                                        </form>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <% } %>
    </div>
</html>